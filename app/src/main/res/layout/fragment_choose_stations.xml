<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.alexey.test.ui.view.CustomTextView
                android:id="@+id/station_arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size"
                app:nameField="Станция отправления" />

            <com.example.alexey.test.ui.view.CustomTextView
                android:id="@+id/station_departure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size"
                app:nameField="Станция прибытия" />

            <com.example.alexey.test.ui.view.CustomTextView
                android:id="@+id/date_arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text_size"
                app:nameField="Дата отправления" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>